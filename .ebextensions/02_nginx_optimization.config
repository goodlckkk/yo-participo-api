###############################################################################
# Optimización de Nginx para eliminar warnings
#
# Este archivo configura parámetros de Nginx para optimizar el rendimiento
# y eliminar warnings relacionados con types_hash.
###############################################################################

files:
  "/etc/nginx/conf.d/types_hash.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Optimización de types_hash para evitar warnings
      types_hash_max_size 2048;
      types_hash_bucket_size 128;

commands:
  01_reload_nginx:
    command: "nginx -t && systemctl reload nginx || true"
    ignoreErrors: true
